<p id="notice"><%= notice %></p>

<div class="row">
  <h1 class="col-sm-6">Listing Categories</h1>
  <div class="col-sm-6">
    <%= link_to new_category_path, class: 'btn btn-primary pull-right' do %>
      <i class="glyphicon glyphicon-plus"></i> Add New Category
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <table class="table table-bordered table-striped mt-10">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.title %></td>
            <td><%= category.description %></td>
            <td><%= link_to 'Show', category %></td>
            <td><%= link_to 'Edit', edit_category_path(category) %></td>
            <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td><%= link_to 'Questions', category_question_groups(self) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
