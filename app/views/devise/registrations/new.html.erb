<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">Login</div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <div class="row">
              <div class="col-sm-12">
                <%= f.label :email, class: "col-md-4 control-label" %>
                <div class="col-md-6">
                  <%= f.email_field :email, autofocus: true, class: 'form-control', auto_focus: true, required: true %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-sm-12">
                <%= f.label :password, class: "col-md-4 control-label" %>
                <div class="col-md-6">
                  <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true %>
                </div>
              </div>
            </div>
          </div>


          <div class="form-group">
            <div class="row">
              <div class="col-sm-12">
                <%= f.label :password_confirmation, class: "col-md-4 control-label" %>
                <div class="col-md-6">
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: true %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
              <%= f.submit "Register", class: 'btn btn-primary' %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
