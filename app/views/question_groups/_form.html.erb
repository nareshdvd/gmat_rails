<div class="form-group <% if f.object.category.present? && f.object.category.title == 'Passage' %>hide<% end %>">
  <%= f.label :category_id, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.select :category_id, options_for_select(Category.select("id, title").map{|cate|[cate.title, cate.id]}, f.object.category_id), {include_blank: true}, class: 'form-control' %>
    <%=f.error_span(:category_id) %>
  </div>
</div>
<div class="form-group<% if f.object.category.blank? || f.object.category.title != "Passage" %> hide<% end %>">
  <%= f.label :description, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.text_area :description, :class => 'form-control' %>
  </div>
</div>
<%=f.error_span(:description) %>
