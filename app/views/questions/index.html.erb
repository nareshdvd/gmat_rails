<%- model_class = Question -%>
<div class="row">
  <h1 class="col-sm-6">Listing Levels</h1>
  <div class="col-sm-6">
    <%= link_to new_question_path, class: 'btn btn-primary pull-right' do %>
      <i class="glyphicon glyphicon-plus"></i> Add New Question
    <% end %>
  </div>
</div>
<div class="row mt-10">
  <div class="col-sm-12">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:id) %></th>
          <th><%= model_class.human_attribute_name(:description) %></th>
          <th><%= model_class.human_attribute_name(:level_id) %></th>
          <th><%= model_class.human_attribute_name(:created_at) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td><%= link_to question.id, question_path(question) %></td>
            <td><%= question.description %></td>
            <td><%= question.level_id %></td>
            <td><%=l question.created_at %></td>
            <td>
              <%= link_to t('.show', :default => t("helpers.links.show")), question_path(question), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_question_path(question), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")), question_path(question), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
